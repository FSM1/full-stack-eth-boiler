{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule":true,
    "moduleResolution": "node",
    "types": ["jest","node"],
    "typeRoots": [
      "/node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
    "node_modules/@types",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],

}
