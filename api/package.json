{
  "name": "apiserver",
  "version": "1.0.0",
  "description": "NestJS API server with JWT authentication",
  "keywords": [
    "NestJS",
    "Express",
    "MongoDb",
    "Mongoose",
    "JWT"
  ],
  "author": "Michael Yankelev",
  "license": "MIT",
  "engines": {
    "node": ">=10.0",
    "yarn": ">=1.9.4"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@godaddy/terminus": "4.1.2",
    "@hapi/joi": "15.1.0",
    "@nestjs/common": "6.3.2",
    "@nestjs/core": "6.3.2",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/mongoose": "6.1.2",
    "@nestjs/passport": "6.1.0",
    "@nestjs/platform-express": "6.3.2",
    "@nestjs/platform-socket.io": "6.3.2",
    "@nestjs/terminus": "6.3.3",
    "@nestjs/websockets": "^6.0.0",
    "@panterazar/nestjs-prom": "0.0.5",
    "appmetrics-dash": "^5.0.0",
    "bcrypt": "^3.0.4",
    "class-transformer": "0.2.3",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "csurf": "^1.9.0",
    "dotenv": "^6.1.0",
    "ethers": "^4.0.20",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb-uri": "^0.9.7",
    "mongoose": "^5.4.19",
    "mongoose-gridfs": "^0.6.2",
    "nest-status-monitor": "^0.1.1",
    "nest-winston": "^1.0.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "prom-client": "^11.3.0",
    "prometheus-api-metrics": "^2.2.2",
    "reflect-metadata": "0.1.13",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.4.0",
    "streamifier": "^0.1.1",
    "ts-node": "^8.1.0",
    "typescript": "^3.0.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "6.3.2",
    "@types/bcrypt": "3.0.0",
    "@types/compression": "0.0.36",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "24.0.15",
    "@types/mongodb-uri": "0.9.0",
    "@types/mongoose": "5.5.6",
    "@types/node": "^10.7.1",
    "@types/supertest": "2.0.7",
    "jest": "24.8.0",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
